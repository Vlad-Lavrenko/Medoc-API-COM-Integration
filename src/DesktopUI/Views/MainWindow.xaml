<Window x:Class="MedocIntegration.DesktopUI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:pages="clr-namespace:MedocIntegration.DesktopUI.Views.Pages"
        Title="Medoc Integration Manager"
        Height="700" Width="1000"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesign.Brush.Background}"
        FontFamily="{materialDesign:MaterialDesignFont}"
        TextElement.Foreground="{DynamicResource MaterialDesign.Brush.Foreground}"
        TextElement.FontSize="14">

    <Grid>
        <TabControl Style="{StaticResource MaterialDesignFilledTabControl}"
                    materialDesign:ColorZoneAssist.Mode="PrimaryMid">

            <!-- Сторінка 1: Служба та Логи -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ViewDashboard"
                                                VerticalAlignment="Center"
                                                Margin="0,0,8,0"/>
                        <TextBlock Text="Служба та Логи" VerticalAlignment="Center"/>
                    </StackPanel>
                </TabItem.Header>
                <pages:DashboardPage/>
            </TabItem>

            <!-- Сторінка 2: Налаштування -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Cog"
                                                VerticalAlignment="Center"
                                                Margin="0,0,8,0"/>
                        <TextBlock Text="Налаштування" VerticalAlignment="Center"/>
                    </StackPanel>
                </TabItem.Header>
                <pages:SettingsPage/>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
